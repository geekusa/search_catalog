<form hideEdit="true">
  <label>Not Sure Where to Look?</label>
  <fieldset submitButton="true">
    <input type="text" token="text_search">
      <label>Keywords to search</label>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Possibly look here (click to go to search):</title>
      <table>
        <search>
          <query>| inputlookup search_catalog | where isnotnull(search) | search name="*$text_search$*" OR parent="*$text_search$*" OR search="*$text_search$*" OR section="*$text_search$*" OR notes="*$text_search$*"
|table section parent name</query>
        </search>
        <option name="drilldown">row</option>
        <format type="color" field="section">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <drilldown>
          <eval token="dashboard_target">replace(lower($row.name$), " ", "_")</eval>
          <link target="_blank">$dashboard_target$</link>
        </drilldown>
      </table>
    </panel>
  </row>
</form>
